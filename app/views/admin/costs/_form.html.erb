<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for [:admin, @cost], html: {multipart: true}  do |f| %>
      <%=  render "shared/error_messages", object: @cost %>
      <div class="form-group">
        <%= f.label :month, t(".month") %><br />
        <%= f.text_field :month, placeholder: 'Ngày/Tháng/Năm', value: @cost.month&.strftime("%d/%m/%Y"),
          class: "form-control datetime-picker", required: "true" %>
      </div>

      <div class="form-group">
        <%= f.label :total_payment_electric, t(".total_payment_electric") %><br />
        <%= f.text_field :total_payment_electric, autocomplete: false, class: "form-control",
          required: "true", type: :number %>
      </div>

      <div class="form-group">
        <%= f.label :total_payment_water, t(".total_payment_water") %><br />
        <%= f.text_field :total_payment_water, autocomplete: false, class: "form-control",
          required: "true", type: :number %>
      </div>

      <div class="form-group">
        <%= f.label :amount_electric, t(".amount_electric") %><br />
        <%= f.text_field :amount_electric, autocomplete: false, class: "form-control",
          required: "true", type: :number %>
      </div>

      <div class="form-group">
        <%= f.label :amount_water, t(".amount_water") %><br />
        <%= f.text_field :amount_water, autocomplete: false, class: "form-control",
          required: "true", type: :number %>
      </div>

      <div class="actions">
        <%= f.submit t(".save"), class: "btn btn-default" %>
      </div>
    <% end %>
    <br />
    <%= link_to "Quay lại", root_path %>
  </div>
</div>
