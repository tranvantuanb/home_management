<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for [:admin, @floor_cost], html: {multipart: true}  do |f| %>
      <%=  render "shared/error_messages", object: @floor_cost %>

      <div class="form-group">
        <%= f.label :month, t(".month") %><br />
        <%= f.text_field :month, placeholder: 'Ngày/Tháng/Năm', value: @floor_cost.month&.strftime("%d/%m/%Y"),
          class: "form-control datetime-picker", required: "true" %>
      </div>

      <div class="form-group">
        <%= f.label :amount_electric_consumption, t(".amount_electric_consumption") %><br />
        <%= f.text_field :amount_electric_consumption,
          class: "form-control", required: "true", type: :number %>
      </div>

      <div class="form-group">
        <%= f.collection_select :floor_id, Floor.all, :id, :name,{}, {class: "form-control"} %>
      </div>

      <div class="actions">
        <%= f.submit t(".save"), class: "btn btn-default" %>
      </div>
    <% end %>
    <br />
    <%= link_to "Quay lại", root_path %>
  </div>
</div>
